@model Training_wmqr.Models.User

@{
    ViewBag.Title = "Edit";
}

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        
        <fieldset>
			<legend>Edit User</legend>
            @Html.HiddenFor(model => model.Id)
			<label>
				<span>@Html.LabelFor(model => model.Username):</span>
				@Html.EditorFor(model => model.Username)
				<span>@Html.ValidationMessageFor(model => model.Username)</span>
			</label>
			<label>
				<span>@Html.LabelFor(model => model.Email):</span>
				@Html.EditorFor(model => model.Email)
				<span>@Html.ValidationMessageFor(model => model.Email)</span>
			</label>
		</fieldset>
        <button type="submit">Update User</button>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>